<div class="message">
    <h2 class="message-title"><%= message.title %></h2>
    <p class="message-description"><%= message.text %></p>
    <%if (isMember || locals.currentUser.id === message.user_id) { %>
        <p>By <a class="user-link" href="/user/<%= message.user_id %>/"><%= message.first_name %> <%= message.last_name %></a>, <%= new Date(message.date).toLocaleString('en-GB').replace(",", " ")%></p>
    <% } else {%>
        <p>By: Anonymous</p>
    <% } %>
    <% if (locals.currentUser.admin_status || message.user_id === locals.currentUser.id) { %>
        <form class="delete-form" action="/messages/<%= message.message_id %>/delete" method="post">
            <button class="delete" onclick="return confirm('Do you want to delete this message?')" type="submit"><img src="/icons/delete_icon.svg" alt="Delete"></button>
        </form>
    <% } %>
</div>